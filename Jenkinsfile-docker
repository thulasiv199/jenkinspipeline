pipeline {
    agent{
        docker{
            image 'maven:alpine-test'
            label 'dockernode'
        }
    }
    stages{
        stage('checkout')
        {
            steps{
                git branch: 'master', url: 'https://github.com/thulasiv199/jenkinspipeline.git'
            }
        }
        stage('build')
        {
            steps{
              sh "mvn clean install"
            }
        }
    }
}
